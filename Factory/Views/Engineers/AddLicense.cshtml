@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Add a license</h2>

<h4>Add a license to this engineer: @Html.DisplayFor(model => model.Description)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  @Html.Label("Select license")
  @Html.DropDownList("LicenseId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>